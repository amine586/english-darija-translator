{
  "manifest_version": 3,
  "name": "Traducteur Darija",
  "description": "Traduit du fran√ßais vers le darija marocain",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8082/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Ouvrir le traducteur Darija"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
